{
  "manifest_version": 2,
  "name": "MyWeatherApp",
  "short_name": "MyWeatherApp",
  "description": "",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "permissions" : [
    "geolocation",
    "http://openweathermap.org/img/w/"
  ],
  
  "browser_action" : {
    "default_icon" : "assets/icon_16.png",
    "default_popup" : "index.html"
  },
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "web_accessible_resources": ["assets/WeatherIcons/10n.png"]
}
